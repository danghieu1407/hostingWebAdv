<div class="modal fade" id="CommentModal">
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">

      <!-- Modal Header -->

      <div class="modal-header">
        <h4 class="modal-title">Bình Luận</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <div id="CommentList">
          <div class="ElementComment">
            <h6 class="UserComment"> </h6>
            <p class="ContentOfComment"></p>
            <br>
          </div>
        </div>
        <!-- Gửi comment -->
        <form method="post" id="SendComment">
          <div class="form-group">

            <table class="table table-striped table-bordered">
              <tr>
                <td>
                  <input type="text" name="authId" id="authID" value="<%= user.authId%>" hidden>
                  Người gửi : <%= user.name%>
                </td>
              </tr>
              <tr>
                <td>
                  <label for="comment">Bình Luận</label>
                  <textarea class="form-control" rows="5" id="comment" name="comment"></textarea>
                </td>
              </tr>
            </table>
          </div>
          <button type="submit" class="btn btn-primary">Đăng</button>
        </form>
      </div>
      <!-- Modal footer -->
    </div>
  </div>
</div>




<div class="modal fade" id="PostNotification">
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">

      <!-- Modal Header -->

      <div class="modal-header">
        <h4 class="modal-title">Đăng Thông Báo</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <form id="PostNotificationForm" method="POST" action="/nontification">
          <table class = "table">
            <tr>
              <td>Phòng Khoa</td>
              <td> 
                <select class="form-select" aria-label="Default select example">
                  <option selected >Chọn Phòng Khoa</option>
                  <option id="Creator" value="<%=user.role%>"><%=user.role%></option>
                </select>
              </td>
            </tr>

            <tr>
              <td>Tiêu đề</td>
              <td> <textarea id="title" type="text" name="title" cols="50" rows="5"></textarea></td>
            </tr>

            <tr>
              <td>Nội dung</td>
              <td> <input type="text"  id="msg" type="text" name="msg"cols="50" rows="10"></td>
            </tr>
            
          </table>    
          <input type="submit" class="btn btn-primary" value="Đăng bài">
        </form>
      </div>
      <!-- Gửi comment -->

    </div>
    <!-- Modal footer -->
  </div>
</div>
</div>